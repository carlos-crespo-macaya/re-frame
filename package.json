{
  "name": "cbt-assistant-poc",
  "version": "1.0.0",
  "description": "CBT Assistant POC - Monorepo for frontend and backend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:frontend": "cd frontend && pnpm run dev",
    "dev:backend": "cd backend && python -m uvicorn app.main:app --reload",
    "dev:all": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && pnpm run build",
    "test": "npm run test:frontend",
    "test:frontend": "cd frontend && pnpm run test",
    "test:backend": "cd backend && pytest",
    "test:all": "npm run test:frontend && npm run test:backend",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && pnpm run lint",
    "lint:backend": "cd backend && ruff check .",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/macayaven/re-frame.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}