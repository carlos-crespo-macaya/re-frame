# Google API Key for Gemini (required)
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-api-key-here

# Project environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=DEBUG

# Backend Configuration
PORT=8000
PYTHONUNBUFFERED=1

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NODE_ENV=development
# For production: https://reframe-edge-[HASH]-ew.a.run.app
NEXT_PUBLIC_CLOUD_RUN_URL=https://reframe-edge-ew.a.run.app

# Firebase Project (for emulator)
FIREBASE_PROJECT_ID=re-frame-local

# Google Cloud Storage
GCS_BUCKET_NAME=reframe-apd-pdf
GCS_PROJECT_ID=macayaven
GCS_SERVICE_ACCOUNT_SECRET=reframe-edge-sa-key